<?xml version="1.0"?>
<launch>

	<!-- Arguments -->
	<arg name="model" default="$(find soma_description)/urdf/movebase_vlp16.xacro" />
	<arg name="world_model" default="simple3.world" />
	<arg name="rvizconfig" default="$(find soma_description)/rviz/simulator.rviz" />
	<arg name="gazebo" default="true" /> 
	<arg name="gui_rviz" default="true" />
	<arg name="gui_gazebo" default="true" />
	<arg name="steering" default="false" />


	<!-- Parameters -->
	<param name="robot_description" command="$(find xacro)/xacro $(arg model)" />
	<rosparam command="load" file="$(find soma_description)/config/diff_drive_controller.yaml" ns="/dtw_robot" />
	<rosparam command="load" file="$(find soma_description)/config/joint_state_controller.yaml" ns="/dtw_robot" />
	

	<!-- Nodes -->

	<node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -model dtw_robot" />
	<node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />
	<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
	<node name="controller_spawner" pkg="controller_manager" type="spawner" ns="/dtw_robot" args="diff_drive_controller joint_state_controller" />
	
	<!-- Gazebo -->
	<if value="${arg gazebo}">
		<include file="$(find gazebo_ros)/launch/empty_world.launch">
			<arg name="use_sim_time" value="true" />
			<arg name="gui" value="$(arg gui_gazebo)" />
			<arg name="world_name" value="$(arg world_model)" />
		</include>
	</if>

	<!-- Rviz -->
	<node if="$(arg gui_rviz)" name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" />
	<node if="${arg steering}" name="robot_steering" pkg="rqt_robot_steering" type="rqt_robot_steering"/>
	
</launch>
